#!/bin/bash

# Egy paraméterként megadott csomag mibenvoltának lekérdezése

function hiba () {
	echo 'Használat: miez <ub> '
	exit 1
}

# csak a fordítási mappában megy és színes
. disztbe
gitmappa=~/gittek/ubk/ub-${kisdiszt}

if [ ! -d $gitmappa ];then
    pirosecho "Nincs klónozott $gitmappa"
    hiba
fi
if [ ! -d $gitmappa/$1 ];then
    pirosecho "nincs $1 ubmappa"
    hiba
fi
leiras=$(cat $gitmappa/$1/packages/$1/summary/hu)
szekcio=$(cat $gitmappa/$1/packages/$1/section)
acquire=$(cat $gitmappa/$1/acquire)
zoldecho "$1 -- $leiras"
kekecho "Szekció -- $szekcio"
echo $acquire
